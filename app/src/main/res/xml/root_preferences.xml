<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory
        app:icon="@drawable/ic_baseline_wb_sunny_24"
        app:title="Switch Mode"
        >


        <SwitchPreferenceCompat
            app:key="attachment"
            app:summaryOff="Light Mode On"
            app:summaryOn="Dark Mode On"
            app:title="" />

    </PreferenceCategory>

    <PreferenceCategory
        app:icon="@drawable/ic_baseline_notifications_24"
        app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="notifications"
            app:summaryOff="You will no longer receive any notifications"
            app:summaryOn="You will now receive all notifications"
            app:title="" />
    </PreferenceCategory>


</PreferenceScreen>